<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="60dp"
    android:background="@color/grey"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:elevation="2dp"
        android:layout_alignStart="@+id/card_view"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/red"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CLOSED"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_alignParentLeft="true"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="70dp"
                        android:text="HOURS"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:id="@+id/hours_text"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="MON-THUR        10AM - 8PM"
                        android:id="@+id/montext"
                        android:layout_below="@+id/hours_text"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="FRI-SUN              10AM - 8PM"
                        android:id="@+id/tuetext"
                        android:layout_below="@+id/montext"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:id="@+id/imageView3"
                        android:background="@drawable/big_button"
                        android:src="@drawable/clock"
                        android:padding="13dp"
                        android:layout_marginTop="82dp"
                        android:elevation="8dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentEnd="true"
                      />
                </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:elevation="2dp"
        android:layout_below="@+id/card_view2"

        android:layout_marginTop="6dp"
     >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="DETAILS"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:id="@+id/details_text"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textSize="17sp"
                android:text="Address"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_below="@+id/details_text"
                android:layout_alignStart="@+id/details_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/text_address"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:id="@+id/imageView2"
                android:layout_marginTop="49dp"
                android:background="@drawable/big_button"
                android:src="@drawable/map_icon"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:elevation="8dp"
                android:layout_alignParentEnd="true"
                />



            <TextView
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:textSize="17sp"
                android:layout_marginTop="70dp"
                android:text="Phone Number"
                android:textStyle="bold"
                android:id="@+id/textPhone"
                android:layout_below="@+id/text_address"
                android:layout_alignStart="@+id/details_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/textNumber"
                android:layout_below="@+id/textPhone"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:id="@+id/phone_button"
                android:layout_marginTop="179dp"
                android:background="@drawable/small_button"
                android:src="@drawable/phone"
                android:elevation="8dp"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:textSize="17sp"
                android:layout_marginTop="84dp"
                android:text="Website"
                android:textStyle="bold"
                android:id="@+id/text_website"
                android:layout_below="@+id/textNumber"
                android:layout_alignStart="@+id/textPhone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/website_link"
                android:layout_below="@+id/text_website"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:id="@+id/website_button"
                android:layout_marginTop="315dp"
                android:background="@drawable/small_button"
                android:src="@drawable/website"
                android:elevation="8dp"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="2dp"
            android:layout_below="@+id/card_view"

            android:layout_marginTop="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="CATEGORIES"
                        android:fontFamily="sans-serif"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:id="@+id/category_text"
                        android:layout_alignParentLeft="true"/>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:numColumns="auto_fit"
                        android:verticalSpacing="10dp"
                        android:horizontalSpacing="10dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:id="@+id/category_grid"
                        android:layout_marginLeft="10dp"
                        >


                    </GridLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="PICTURES"
                        android:fontFamily="sans-serif"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:id="@+id/pic_text"
                        android:layout_alignParentLeft="true"/>



                    <ImageButton
                        android:layout_width="175dp"
                        android:layout_height="175dp"
                        android:background="@drawable/small_button"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:elevation="8dp"
                        android:id="@+id/pic1"
                        android:scaleType="fitCenter"
                        android:clickable="true" />
                </RelativeLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>

    </RelativeLayout>




</ScrollView>



</RelativeLayout>