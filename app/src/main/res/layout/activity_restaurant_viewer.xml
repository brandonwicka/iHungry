<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ucsb.cs.cs190i.ihungry.ihungryapp.RestaurantViewerActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context="edu.ucsb.cs.cs190i.ihungry.ihungryapp.RestaurantViewerActivity"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView"
            android:alpha="1"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="175dp"
            android:textSize="50dp"
            android:layout_marginLeft="10dp"
            android:text="Restaurant Name"
            android:id="@+id/textView"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/star1"
            android:src="@drawable/starfull"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/starfull"
            android:layout_marginRight="15dp"

            android:id="@+id/star2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/star1" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/star3"
                android:src="@drawable/starfull"
                android:layout_marginRight="15dp"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/star2" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/starfull"
                android:layout_marginRight="15dp"

                android:id="@+id/star4"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/star3" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/star5"
                android:src="@drawable/starfull"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/star4" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        >

        <edu.ucsb.cs.cs190i.ihungry.ihungryapp.SlidingTabLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/tabs"
            android:elevation="2dp"
            android:background="@color/white"
            >
        </edu.ucsb.cs.cs190i.ihungry.ihungryapp.SlidingTabLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs"
            android:id="@+id/pager"
            >

        </android.support.v4.view.ViewPager>
