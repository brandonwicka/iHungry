    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:animateLayoutChanges="true"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ADDRESS"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/details_text"
                android:layout_alignParentLeft="true"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="12dp"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-light"
                android:id="@+id/text_address"
                android:layout_below="@id/details_text"
                android:layout_alignStart="@+id/details_text"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:background="@drawable/distance_button"
                android:src="@drawable/map_icon"
                android:padding="18dp"
                android:scaleType="fitCenter"
                android:elevation="8dp"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_below="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"

            android:layout_height="200dp"
            android:elevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="32dp"
                android:animateLayoutChanges="true"
                android:paddingRight="32dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                >


                <TextView
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="PHONE NUMBER"
                        android:id="@+id/textPhone"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-thin"
                        android:paddingTop="20dp"
                        android:id="@+id/textNumber"
                        android:layout_below="@+id/textPhone"
                         />

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/phone_button"
                        android:background="@drawable/small_button"
                        android:layout_centerVertical="true"
                        android:src="@drawable/phone"
                        android:elevation="8dp"
                        android:padding="18dp"
                        android:scaleType="fitCenter"
                        android:layout_alignParentEnd="true"
                        />


            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_below="@+id/card_view2"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"

            android:elevation="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                >



                    <TextView
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:textSize="18sp"
                            android:text="WEBSITE"
                            android:textStyle="bold"
                            android:id="@+id/text_website"
                            />

                        <TextView
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:paddingTop="20dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/website_link"
                            android:layout_below="@+id/text_website"
                             />

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/website_button"
                            android:background="@drawable/big_button"
                            android:layout_centerVertical="true"
                            android:src="@drawable/website"
                            android:elevation="8dp"
                            android:padding="16dp"
                            android:scaleType="fitCenter"
                            android:layout_alignParentEnd="true"
                            />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:elevation="2dp"
            android:layout_below="@+id/card_view3"

            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="CATEGORIES"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/text_categories"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:layout_below="@id/text_categories"
                    android:paddingBottom="5dp"
                    android:paddingLeft="32dp"

                    android:paddingRight="32dp"
                    android:paddingTop="10dp"
                    android:id="@+id/categories_panel">
                </LinearLayout>


            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </RelativeLayout>




</ScrollView>



</RelativeLayout>